{# ACCOUNT SET PASSWORD #}
{% extends "_layout" %}

{# SET HEADER VARIABLES #}
{% set title                    = "Update your password" %}
{% set class                    = "account" %}

{# SET SEO VALUES #}
{% do seomatic.meta.seoTitle( "Set your password" ) %}

{% block content %}

  <header class="page-header text-center">
    <h1 class="page-title">Forgot your password?</h1>
  </header>
  
  <div class="grid-x grid-margin-x align-center">
    <div class="main medium-8 large-6 cell">
  
      <form id="passwordForm" method="post" accept-charset="UTF-8" data-abide novalidate>
        {{ csrfInput() }}
        {{ actionInput('users/set-password') }}
        {{ hiddenInput('code', code) }}
        {{ hiddenInput('id', id) }}
  
        <div>
          <label for="newPassword">New Password</label>
          <input id="newPassword" type="password" name="newPassword" aria-errormessage="passwordError" pattern="minlength" required>
          <span class="form-error" id="passwordError">Please enter a valid password.</span>
          <p class="help-text" id="passwordHelpText">Your password must be at least 6 characters long.</p>
        </div>
        {% if errors is defined %}
          <ul class="errors">
            {% for error in errors %}
              <li>{{ error }}</li>
            {% endfor %}
          </ul>
        {% endif %}
  
        <input class="button success large expanded" type="submit" value="SUBMIT">

      </form>
  
      <p class="text-center"><a href="{{ url('account/login') }}">Login to your account</a></p>
  
    </div>
  </div>

{% endblock %}