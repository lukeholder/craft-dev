<!DOCTYPE html>
<html lang="en-US">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />
    <title>Welcome to Craft CMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />
    <meta name="referrer" content="origin-when-cross-origin" />
</head>
<body class="ltr">
<div id="container">
    {{ sprig.triggerRefreshOnLoad() }}
    {{ sprig('_components/polling') }}
    {% set productId = craft.app.request.getParam('product') %}
    {% if productId %}
        {{ sprig('_components/product-variant-switcher', { productId: productId }) }}
{#        {{ sprig('_components/product', { productId: productId }) }}#}
    {% endif %}
</div>
</body>
</html>
