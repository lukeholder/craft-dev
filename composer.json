{
  "require": {
    "craftcms/cms": "@dev",
    "craftcms/cloud": "@dev",
    "vlucas/phpdotenv": "^5.4.0"
  },
  "require-dev": {
    "craftcms/generator": "^1.3.0",
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\": "modules/"
    }
  },
  "config": {
    "allow-plugins": {
      "craftcms/plugin-installer": true,
      "yiisoft/yii2-composer": true
    },
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\""
    ]
  },
  "repositories": {
    "local": {
      "type": "path",
      "url": "./.ddev/craft-cloud/packages/*",
      "options": {
        "symlink": true,
        "reference": "none",
        "versions": {
          "craftcms/cms": "4.6.1",
          "craftcms/cloud": "1.32.0"
        }
      }
    }
  }
}
