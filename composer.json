{
    "require": {
        "craftcms/cloud": "dev-bugfix/dev-mode-crashes as 1.x-dev",
        "craftcms/cms": "4.x-dev",
        "verbb/navigation": "*",
        "vlucas/phpdotenv": "^5.4.0"
    },
    "require-dev": {
        "craftcms/generator": "^1.7",
        "yiisoft/yii2-shell": "^2.0.3"
    },
    "autoload": {
        "psr-4": {
            "modules\\": "modules/",
            "testmodule\\": "testmodule/"
        }
    },
    "config": {
        "allow-plugins": {
            "craftcms/plugin-installer": true,
            "yiisoft/yii2-composer": true
        },
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform": {
            "php": "8.2"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example.dev', '.env');\""
        ]
    },
    "repositories": {
        "navigation": {
            "type": "path",
            "url": "verbb-navigation"
        },
        "local": {
            "type": "path",
            "url": "/tmp/packages/*",
            "options": {
                "symlink": true
            }
        }
    }
}
